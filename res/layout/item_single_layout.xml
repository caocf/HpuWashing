<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/iv_pay_type_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingTop="2dp"
        android:paddingLeft="15dp"
        android:src="@drawable/wechat" />

    <TextView
        android:id="@+id/pay_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_pay_type_logo"
        android:paddingLeft="10dp"
        android:text="支付宝"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/listview_single_checkbox"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <LinearLayout
        android:id="@+id/ll_show_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/checkbox"
        android:orientation="vertical"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/pay_recharge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#777777"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pay_recharge_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="余额不足"
            android:textColor="#777777"
            android:visibility="invisible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_pay_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll_show_text"
        android:background="@color/gray"
        android:contentDescription="@null"
        android:paddingTop="10dp" />

</RelativeLayout>