<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_address_select"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/address_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:contentDescription="@null"
        android:src="@drawable/address_icon" />

    <TextView
        android:id="@+id/address_item_name"
        style="@style/textsize_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/address_icon"
        android:padding="5dp"
        android:text="姓名" />

    <TextView
        android:id="@+id/address_item_tel"
        style="@style/textsize_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/address_item_name"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:text="电话" />

    <TextView
        android:id="@+id/address_item_text"
        style="@style/textsize_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_item_name"
        android:layout_toRightOf="@id/address_icon"
        android:padding="5dp"
        android:text="北京市朝阳那个区将台路你" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/address_item_name"
        android:background="@color/gray" />

</RelativeLayout>