<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/gray" >

    <RelativeLayout
        android:id="@+id/my_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/e_h_top_bar" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mine_title"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/my_title"
        android:background="@drawable/mine_title_bg" >

        <ImageView
            android:id="@+id/iv_mine_user_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/mine_user_logo" />

        <TextView
            android:id="@+id/user_tel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_mine_user_logo"
            android:layout_toRightOf="@id/iv_mine_user_logo"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:text="立即登录"
            android:textColor="#332B2B"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_mine_user_logo"
            android:layout_toRightOf="@id/iv_mine_user_logo"
            android:paddingBottom="20dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="洗衣就用e袋洗 幸福生活每一天"
            android:textColor="#464040"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mine_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_mine_title"
        android:layout_marginTop="10dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/iv_mine_item_left_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:src="@drawable/mine_balance_logo" />

        <TextView
            android:id="@+id/tv_mine_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_mine_item_left_recharge"
            android:gravity="center_vertical"
            android:text="余额 			"
            android:textColor="#3e3e3e"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_mine_item_icard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_mine_item_text"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="暂无信息"
            android:textColor="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_mine_recharge_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/recharge_btn_bg"
            android:gravity="center"
            android:text="充值 "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:id="@+id/mine_item_short_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@id/tv_mine_item_text"
            android:layout_below="@id/tv_mine_recharge_btn"
            android:layout_marginTop="15dp"
            android:background="@color/line_short" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mine_luxury"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_mine_recharge"
        android:background="@color/white"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_mine_item_left_luxury"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:src="@drawable/mine_luxury_logo" />

        <TextView
            android:id="@+id/tv_mine_item_text_luxury"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_mine_item_left_luxury"
            android:gravity="center_vertical"
            android:text="奢护年卡"
            android:textColor="#3e3e3e"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_mine_icard_uxury"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_mine_item_text_luxury"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="暂无信息"
            android:textColor="#999999"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mine_recharge_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/recharge_btn_bg"
            android:gravity="center"
            android:text="充值 "
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_mine_luxury_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:textColor="#999999"
                android:text="有效期"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_mine_luxury_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:textColor="#141414"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/mine_item_short_line_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@id/tv_mine_item_text_luxury"
            android:layout_below="@id/mine_recharge_btn_1"
            android:layout_marginTop="15dp"
            android:background="@color/line_short" />
    </RelativeLayout>

    <ListView
        android:id="@+id/my_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_mine_luxury"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="vertical|none" >
    </ListView>

    <ImageView
        android:id="@+id/addresslist_no_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:src="@drawable/wifi_failure"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/addresslist_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addresslist_no_order"
        android:layout_centerHorizontal="true"
        android:background="@anim/frame_loading"
        android:contentDescription="@null"
        android:visibility="gone" />

</RelativeLayout>