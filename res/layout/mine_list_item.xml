<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/rl_mine_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/iv_mine_item_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@null"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_mine_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_mine_item_left"
            android:gravity="center_vertical"
            android:text="标题"
            android:textColor="#3e3e3e"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_mine_item_icard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_mine_item_text"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="暂无信息"
            android:textColor="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_mine_item_icard_bak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_mine_item_text"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#999999"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_mine_item_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:src="@drawable/mine_next" />

        <TextView
            android:id="@+id/mine_recharge_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/recharge_btn_bg"
            android:gravity="center"
            android:text="充值 "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:id="@+id/mine_item_short_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@id/tv_mine_item_text"
            android:layout_below="@id/mine_recharge_btn"
            android:layout_marginTop="15dp"
            android:background="@color/line_short" />
    </RelativeLayout>

    <View
        android:id="@+id/mine_item_divide_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/rl_mine_top"
        android:background="@color/gray"
        android:contentDescription="@null" />

</RelativeLayout>