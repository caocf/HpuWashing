<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    tools:context="com.edaixi.activity.PayActivity" >

    <RelativeLayout
        android:id="@+id/pay_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/e_h_top_bar" >

        <ImageView
            android:id="@+id/pay_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/login_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="付款"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay_title" >

        <TextView
            style="@style/textsize_3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/pay_money"
            android:gravity="center_vertical"
            android:text="订单金额：" />

        <TextView
            android:id="@+id/pay_order_value"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/yellow"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/dingdanjine_pay_line_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/relativeLayout2"
        android:layout_marginLeft="15dp"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/coupon_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout2" >

        <TextView
            style="@style/textsize_3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/order_text"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/pay_coupon"
            android:gravity="center_vertical"
            android:text="优惠券：" />

        <TextView
            android:id="@+id/pay_coupon_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/next"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="请选择优惠券"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pay_coupon_value"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/yellow"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/coupon_relayout"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/pay_type_text"
        style="@style/textsize_3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/line"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="支付方式" />

    <ImageView
        android:id="@+id/iv_pay_type_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_type_text"
        android:src="@drawable/evaluation_long_line" />

    <com.edaixi.view.SingleView
        android:id="@+id/view_pay_type_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_pay_type_line" >
    </com.edaixi.view.SingleView>

    <com.edaixi.view.SingleView
        android:id="@+id/view_pay_type_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_pay_type_wechat" >
    </com.edaixi.view.SingleView>

    <com.edaixi.view.SingleView
        android:id="@+id/view_pay_type_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_pay_type_alipay" >
    </com.edaixi.view.SingleView>

    <com.edaixi.view.SingleView
        android:id="@+id/view_pay_type_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_pay_type_recharge" >
    </com.edaixi.view.SingleView>

    <Button
        android:id="@+id/pay_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/yellow_btn"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>