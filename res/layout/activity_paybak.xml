<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray"
    tools:context="com.edaixi.activity.PayActivity" >

    <RelativeLayout
        android:id="@+id/pay_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/e_h_top_bar" >

        <ImageView
            android:id="@+id/pay_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/login_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="支付"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pay_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay_title"
        android:background="#F8F2D5"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tv_pay_ordersn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="订单编号： 15055555  456123"
            android:textColor="#292727" />

        <TextView
            android:id="@+id/tv_pay_clothes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="共件衣物"
            android:textColor="#292727" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_pay_order_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_pay_top"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tv_pay_order_price_text"
            style="@style/textsize_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="订单金额" />

        <TextView
            android:id="@+id/tv_pay_order_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/money_icon"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="257.00"
            android:textColor="#129ef3"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/coupon_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_pay_order_price"
        android:layout_marginTop="20dp"
        android:background="@color/white" >

        <TextView
            style="@style/textsize_3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/order_text"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/coupon_icon"
            android:gravity="center_vertical"
            android:text="  优惠券：" />

        <TextView
            android:id="@+id/tv_pay_coupon_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/next"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="请选择优惠券"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_pay_coupon_value"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/yellow"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/coupon_relayout"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/pay_type_text"
        style="@style/textsize_3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/line"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="支付方式" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pay_type_text"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_pay_type_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/evaluation_long_line" />

            <com.edaixi.view.SingleView
                android:id="@+id/view_pay_type_wechat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.edaixi.view.SingleView>

            <com.edaixi.view.SingleView
                android:id="@+id/view_pay_type_alipay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.edaixi.view.SingleView>

            <com.edaixi.view.SingleView
                android:id="@+id/view_pay_type_baidupay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.edaixi.view.SingleView>

            <com.edaixi.view.SingleView
                android:id="@+id/view_pay_type_luxury"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:visibility="gone"
                >
            </com.edaixi.view.SingleView>

            <com.edaixi.view.SingleView
                android:id="@+id/view_pay_type_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.edaixi.view.SingleView>

            <com.edaixi.view.SingleView
                android:id="@+id/view_pay_type_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.edaixi.view.SingleView>

            <Button
                android:id="@+id/bt_pay_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/order_pay_btn"
                android:gravity="center"
                android:text="需支付  25.00"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>