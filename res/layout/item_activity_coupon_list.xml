<?xml version="1.0" encoding="utf-8"?>
<!-- 优惠券列表页面的列表单个item项 -->
<!DOCTYPE xml>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/item_activity_coupon_list_topback"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/coupon_bg_available_left"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/item_activity_coupon_list_rmb"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/rmb" />

                <TextView
                    android:id="@+id/item_activity_coupon_list_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/item_activity_coupon_list_rmb"
                    android:text="30"
                    android:textColor="@color/white"
                    android:textSize="40sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_coupon_list_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/coupon_bg_available_right"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/item_activity_coupon_list_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:contentDescription="@null"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/coupon_selected"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/item_activity_coupon_list_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="积分兑换"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_activity_coupon_list_uselimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="满100可用"
                android:textColor="#8e8e8e"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_activity_coupon_list_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="（仅限在线支付使用）"
                android:textColor="#8e8e8e"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_activity_coupon_list_timeout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2天后过期"
                android:textColor="#8e8e8e"
                android:textSize="14sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>