<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="1" >

    <RelativeLayout
        android:id="@+id/rl_coupon_list_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:background="@drawable/coupon_bg_available_left" >


        <TextView
            android:id="@+id/tv_coupon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="10dp"
            android:text="洗衣家纺券" />

        <TextView
            android:id="@+id/item_activity_coupon_list_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:text="￥"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/item_activity_coupon_list_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_activity_coupon_list_rmb"
            android:layout_toRightOf="@id/item_activity_coupon_list_rmb"
            android:gravity="bottom"
            android:paddingLeft="10dp"
            android:text="300"
            android:textSize="40sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_coupon_list_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:background="@drawable/coupon_bg_available_right" >

        <ImageView
            android:id="@+id/iv_coupon_right_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:contentDescription="@null"
            android:layout_margin="10dp"
            android:src="@drawable/coupon_right_bg_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/item_activity_coupon_list_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/coupon_selected"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/item_activity_coupon_list_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="积分兑换"
                android:textColor="#666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_activity_coupon_list_uselimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="满100可用  仅限在线支付使用 "
                android:textColor="#8e8e8e"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_activity_coupon_list_timeout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2天后过期"
                android:textColor="#8e8e8e"
                android:textSize="14sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>