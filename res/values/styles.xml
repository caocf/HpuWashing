<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- customdialog style -->

    <style name="customdialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/customdialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="rongchain_progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="guide_dialog_style" parent="@android:style/Theme.Translucent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 字体样式 . -->
    <style name="textsize_1">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#3e3e3e</item>
    </style>

    <style name="textsize_2">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#3e3e3e</item>
    </style>

    <style name="textsize_3">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#3e3e3e</item>
    </style>

    <style name="textsize_4">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#1aa4f2</item>
    </style>

    <!-- 评价星星样式 . -->
    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_bg</item>
        <item name="android:enabled">@drawable/ratingbar_enable</item>
        <item name="android:minHeight">27.5dp</item>
        <item name="android:maxHeight">27.5dp</item>
    </style>

    <style name="SuggestionPopupAnimation">
        <item name="@android:windowEnterAnimation">@anim/suggestion_popup_fade_in</item>
        <item name="@android:windowExitAnimation">@anim/suggestion_popup_fade_out</item>
    </style>

</resources>